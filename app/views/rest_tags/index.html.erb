<div class="page-header">
  <h1>
    Rest tags
    <a href="/rest_tags/new" class="btn btn-lg btn-success">New Rest tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @rest_tags.each do |rest_tag| %>
      <tr>
        <td><%= rest_tag.restaurant_id %></td>
        <td><%= rest_tag.tag_id %></td>
        <td>
          <a href="/rest_tags/<%= rest_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/rest_tags/<%= rest_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rest_tag/<%= rest_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
